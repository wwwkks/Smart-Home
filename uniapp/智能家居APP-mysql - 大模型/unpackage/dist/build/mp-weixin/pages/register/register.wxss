.container{display:flex;justify-content:center;align-items:center;height:100vh;background:linear-gradient(135deg,#f5f7fa,#c3cfe2)}.register-form{display:flex;flex-direction:column;width:80%;padding:40px;background-color:#fff;border-radius:12px;box-shadow:0 4px 20px rgba(0,0,0,.1)}.register-form input{height:45px;margin-bottom:20px;padding:0 15px;border:1px solid #dcdfe6;border-radius:4px;font-size:14px;transition:border-color .3s}.register-form input:focus{border-color:#409eff;outline:none;box-shadow:0 0 5px rgba(64,158,255,.5)}.register-form button{height:45px;background-color:#409eff;color:#fff;border:none;border-radius:4px;font-size:16px;cursor:pointer;transition:background-color .3s,-webkit-transform .3s;transition:background-color .3s,transform .3s;transition:background-color .3s,transform .3s,-webkit-transform .3s}.register-form button:hover{background-color:#66b1ff;-webkit-transform:translateY(-2px);transform:translateY(-2px)}.register-form button:active{background-color:#3a8ee6;-webkit-transform:translateY(0);transform:translateY(0)}